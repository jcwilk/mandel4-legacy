{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://0.0.0.0:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=/home/user/devcaches/.chrome-cache/",
                "--incognito"
            ]
        },
        {
            "name": "Launch Chromium against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/snap/bin/chromium",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=/home/user/devcaches/.chromium-cache/",
                "--incognito"
            ]
        },
        {
            "name": "Launch Brave against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/snap/bin/brave",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=/home/user/devcaches/.brave-cache/",
                "--incognito"
            ]
        }
    ]
}
